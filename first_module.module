use Drupal\Core\Form\FormStateInterface;

/**
 * Implements hook_form_FORM_ID_alter().
 **/
function first_module_form_node_article_form_alter(&$form, FormStateInterface $form_state) {
  $form['field_message'] = array(
    '#type' => 'item',
    '#title' => t('New article'),
    '#markup' => t('You are about to create a new article'),
    '#weight' => -6,
  );
}

/**
 * Implements hook_user_login().
 *
 * @param $account
 */
function first_module_user_login($account) {
  drupal_set_message(t('Thank you for logging in and welcome!'));
}